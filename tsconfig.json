{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noErrorTruncation": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "target": "ES2022"
    },
    "include": [
        "eslint.config.mjs",
        "examples/*.ts",
        "lint-staged.config.js",
        "mod.ts",
        "prettier.config.js",
        "scripts/**/*.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "contrib",
        "node_modules"
    ]
}
