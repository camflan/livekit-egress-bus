{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/contexts/*": ["./src/contexts/*"],
      "@/services/*": ["./src/services/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"]
    },
    "target": "ES2022"
  },
  "include": [
    ".next/types/**/*.ts",
    "drizzle.config.ts",
    "eslint.config.js",
    "lint-staged.config.js",
    "next-env.d.ts",
    "next.config.mjs",
    "playwright.config.ts",
    "postcss.config.mjs",
    "prettier.config.js",
    "scripts/**/*.ts",
    "sentry.*.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tailwind.config.ts",
    "tests/**/*.js",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vitest.config.mts"
  ],
  "exclude": ["eslint.config.js", "node_modules"]
}
